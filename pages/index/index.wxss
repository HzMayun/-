.content image {
  height: 100%;
  width: 100%;
}

.nav {
  display: flex;
  justify-content: space-around;
}

.nav-continer {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.nav-continer .iconfont {
  background-color: rgb(240, 19, 19);
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  margin: 28rpx 0;
}

.nav-continer text {
  font-size: 28rpx;
}

/* 推荐区域 */

.recommendContainer {
  padding: 20rpx 20rpx 0;
}



.scroll {
  display: flex;
  padding-top: 20rpx;
  height: 340rpx;
}

.scroll .scroll-content {
  display: flex;
  flex-direction: column;
  width: 200rpx;
  margin-right: 20rpx;
}

.scroll .scroll-content image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
}

/* 文字部分超过隐藏 */
.scroll .scroll-content view {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 排行榜 */

.topContainer {
  padding: 0 20rpx;
  /* background: red; */
 
}
.top-all{
   margin-top: 20rpx
}

.top-swiper {
  height: 470rpx;
}

.topSwiper .topItem {
  background: #fbfbfb;
  width: 96%;
  border-radius: 10rpx;
}

.top-title {
  font-size: 26rpx;
  margin-bottom: 20rpx;
}

.top-bottom {
  margin-bottom: 20rpx;
}

.top-content {
  display: flex;
  align-items: center;
  height: 100rpx;
  margin: 20rpx 0;
}

.top-content image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.top-content text {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  flex-shrink: 0;
}

.top-content .top-name {
  width: 400rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
